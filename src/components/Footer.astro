---
export interface Props {
    title: String,
    subtitle: String,
    links: Array<Link>,
}

export interface Link {
    text: String,
    url: String,
}

const { title, subtitle, links } = Astro.props;
---

<div class="footer text-center py-5">
    <div>
        <h1 class="font-bold text-xl">{title}</h1>
        <h2 class="text-sm">{subtitle}</h2>
    </div>
    <br/>
    <div class="a text-sm">
        {links.map(obj => <a href={obj.url}>{obj.text}</a><br/>)}
    </div>

    
</div>
<style>
    .a {
        text-decoration: underline;
    }
</style>
